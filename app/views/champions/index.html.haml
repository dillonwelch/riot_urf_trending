.content
  %main.index
    %table.center
      - index = 0
      - @champions.each_slice(5) do |slice|
        %tr
          - slice.each do |champion|
            - index += 1
            %td
              %div.text-center
                = "#{index}: "
                %a{ href: champions_search_path(name: champion.name) }
                  =  champion.name
              %img{ src: riot_image_link(champion.name) }
              %dl.inline
                %dt= "Win rate: "
                %dd= (champion.win_rate).round(2)
                %dt= "Pick rate: "
                %dd= (champion.pick_rate).round(2)
