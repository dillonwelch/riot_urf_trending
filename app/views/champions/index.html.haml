.content
  %main.index
    %table.center
      - index = 0
      - @champions.each_slice(4) do |slice|
        %tr
          - slice.each do |champion|
            - index += 1
            %td
              %dl.inline
                %h1
                  = "#{index}: "
                  %a{ href: champions_search_path(name: champion.name) }
                %dt= "Win rate: "
                %dd= (champion.win_rate).round(2)
                %dt= "Pick rate: "
                %dd= (champion.pick_rate).round(2)
                %canvas{ data: { "champion-#{champion.id}"  } }
