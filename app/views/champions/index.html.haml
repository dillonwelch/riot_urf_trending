.content
  %main.index
    %table.center
      - index = 0
      - @champions.each_slice(4) do |slice|
        %tr
          - slice.each do |champion|
            - index += 1
            %td
              = image_tag riot_image_link champion.name
              %dl.inline
                %h1
                  = "#{index}: "
                  = champion.name
                %dt= "Win rate: "
                %dd= (champion.win_rate * 100).round(2)
                %dt= "Pick rate: "
                %dd= (champion.pick_rate * 100).round(2)
                %canvas{ data: { "champion-#{champion.id}"  } }
